<% if RemindMeToLive::Application.config.recaptcha[:enable] %>
    <!-- this is for recaptcha -->
    <script>
        var RecaptchaOptions = {
            theme : 'white'
        };
    </script>
    <%= javascript_include_tag "http://www.google.com/recaptcha/api/challenge?k=#{RemindMeToLive::Application.config.recaptcha[:public_key]}" %>
    <noscript>
      <iframe src="http://www.google.com/recaptcha/api/noscript?k=6Len6sISAAAAAFjJaGLIU7IxEEheifrB8HY2AQj7#{RemindMeToLive::Application.config.recaptcha[:public_key]}" height="300" width="500" frameborder="0"></iframe>
      <textarea name="recaptcha_challenge_field" rows="3" cols="40"></textarea>
      <input type="hidden" name="recaptcha_response_field" value="manual_challenge">
    </noscript>
<% end %>