<%= simple_form_for @user_idea, :remote => remote? do |f| %>
  <div class="row mobile" style="padding-top: 10px;">
    <div class="twelve columns">
      <h5>Remind me to</h5>
      <%= @idea.content %>
      <%= f.simple_fields_for :idea do |idea_form| %>
        <%= idea_form.hidden_field :id, :value => @idea.id %>
      <% end %>
    </div>
  </div>
  <div class="row mobile" style="padding-top: 20px;">
    <div class="two columns">
      <%= f.label :reminder_date, 'on' %>
    </div>
    <div class="four columns">
      <%= f.input :reminder_date, :label => false, :placeholder => 'eg: 10/10/2011 (optional)', :size => 20 %>
    </div>
    <div class="one columns">
      <%= f.label :privacy, 'as' %>
    </div>
    <div class="three columns">
      <%= f.collection_select :privacy, [[0, 'Public'] ,[1, 'Private']], :first, :last %>
    </div>
  </div>
  <hr />
  <%= f.submit @title, :class => "nice large radius blue button" %>
  </div>
<% end %>