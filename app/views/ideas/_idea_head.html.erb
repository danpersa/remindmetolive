  <div class="row mobile">
    <div class="twelve columns phone-four">
      <div class="idea-content">
        <h4>Remind me to...</h4>
        <h3><%= @idea.content %></h3>
    </div>
    </div>
  </div>


  <div class="row mobile">
    <div class="twelve columns phone-four">
      <div><%= pluralize(@idea.users_marked_the_idea_good_count, "person") %> think that this idea is good</div>
      <div><%= pluralize(@idea.users_marked_the_idea_done_count, "person") %> already did this</div>
      <div><%= pluralize(@idea.user_ideas.count, "person") %> want to remember this idea</div>
    </div>
  </div>
  <br />

  <div class="row mobile">
    <div class="twelve columns phone-four">
      <% if @user_idea.nil? %>
        <%= link_to 'Remind me too', new_for_existing_idea_path(@idea.id), :remote => true %>
      <% else %>
        <% if @user_idea.reminder_date.nil? %>
          <a href="#">Create reminder</a>
        <% else %>
          <a href="#">Modify reminder</a>
        <% end %>
      <% end %>
    </div>
  </div>

  <% unless @user_idea.nil? %>
  <div class="row mobile">
    <div class="ten columns offset-by-two phone-four">
      The idea is part of the following lists:
      <%= form_for @user_idea do |f| %>
        <%= f.text_field :idea_list_tokens, "data-pre" => @user_idea.idea_lists.map(&:attributes).to_json %>
        <br/>
        <%= f.submit "Update lists", :class => "btn primary" %>
      <% end %>
    </div>
  </div>
  <% end %>

<br />
<%= render 'ideas/details_tabs' %>