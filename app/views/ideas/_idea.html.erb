<div class="row mobile table-row show-toolbar">
  <div class="two phone-one columns">
    <%= link_to gravatar_for(idea.created_by, :size => 65), idea.created_by %>
  </div>
  <div class="ten phone-three columns">
    <div class="idea-item table-item">
      ...<strong><%= idea.content %></strong><%= (" on " + user_idea.reminder_date.to_s) unless user_idea.reminder_date.nil? %>
    </div>
    <section>
      <div class="row">
        <div class="five phone-two columns">
          <div class="row">
            <div class="twelve columns">
              <div class="timestamp">created <%= time_ago_in_words(idea.created_at) %> ago</div>
            </div>
          </div>
          <div class="row">
            <div class="twelve columns">
              <div class="timestamp">by <%= link_to idea.created_by.display_name, idea.created_by %></div>
            </div>
          </div>
        </div>
        <div class="seven phone-two columns">
          <div class="toolbar right invisible" id="item_toolbar_37">
            <a href="/remind-me-too/37/3" data-remote="true">Remind me too</a> ·
            <span id="good_idea_37">
                <a href="/good-idea/37" data-method="post" data-remote="true" rel="nofollow">Good idea</a> (0)
            </span> ·
            <span id="done_idea_37">
                <a href="/done-idea/37" data-method="post" data-remote="true" rel="nofollow">I did this</a> (0)
            </span>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>