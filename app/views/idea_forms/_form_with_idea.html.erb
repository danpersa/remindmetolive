<%= simple_form_for @idea_form, as: 'existing_idea_form', remote: remote? do |f| %>
  <div class="row mobile" style="padding-top: 10px;">
    <div class="twelve columns">
      <h5>Remind me to</h5>
      <%= @idea.content %>
      <%= f.hidden_field :idea_id, :value => @idea.id %>
    </div>
  </div>
  <div class="row">
    <div class="five mobile-four columns">        
      <%= f.collection_select :repeat, [[0, 'Never Repeat'] ,[1, 'Every day'],[2, 'Every week on'],[3, 'Every month on'],[4, 'Every specified season'],[5, 'Every year on']], :first, :last, {}%>
    </div>
    <div class="one mobile-four columns" style="height: 20px;"></div>
    <div class="five mobile-four columns" style="height: 45px;">
      <%= f.input :reminder_on, :label => false, :placeholder => 'eg: on Sunday', :size => 20 %>
    </div>
    <div class="one mobile-four columns">
    </div>
  </div>
  <div class="row">
    <div class="five mobile-four columns">
      <%= f.collection_select :privacy, [[0, 'Public'] ,[1, 'Private']], :first, :last, {}, {:class => 'privacySelectPopup'} %>
    </div>
    <div class="four mobile-four columns" style="height: 20px;" ></div>
    <div class="two mobile-four columns"></div>
    <div class="one mobile-four columns" style="height: 20px;" ></div>
  </div>


  <hr />
  <%= f.submit @title, :class => "nice large radius blue button" %>
  </div>
<% end %>